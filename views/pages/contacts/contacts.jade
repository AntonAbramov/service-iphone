  script.
    function initialize() {
      var e = new google.maps.LatLng(50.446805, 30.510911), o = {
        center: e,
        scrollwheel: false,
        zoom: 17,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      }, a = new google.maps.Map(document.getElementById("googleMap"), o), n = new google.maps.Marker({position: e});
      n.setMap(a);
      var p = new google.maps.InfoWindow({content: "Service Apple <br> Ремонт любой сложности техники Apple <br>(096) 1253246<br>(093) 7229156<br>(066) 5669752"});
      google.maps.event.addListener(n, "click", function () {
        p.open(a, n)
      })
    }
    function loadScript() {
      var e = document.createElement("script");
      e.type = "text/javascript", e.src = "https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&callback=initialize", document.body.appendChild(e)
    }
    window.onload = loadScript;